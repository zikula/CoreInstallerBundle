<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="install" path="/install/{stage}">
        <default key="_controller">Zikula\Bundle\CoreInstallerBundle\Controller\InstallerController::install</default>
        <default key="stage">null</default>
    </route>

    <route id="ajaxinstall" path="/ajaxinstall">
        <default key="_controller">Zikula\Bundle\CoreInstallerBundle\Controller\AjaxInstallController::ajax</default>
        <option key="expose">true</option>
        <option key="i18n">false</option>
    </route>

    <route id="ajaxupgrade" path="/ajaxupgrade">
        <default key="_controller">Zikula\Bundle\CoreInstallerBundle\Controller\AjaxUpgradeController::ajax</default>
        <option key="expose">true</option>
        <option key="i18n">false</option>
    </route>

    <route id="zauth_migration" path="/zauth_migration">
        <default key="_controller">Zikula\Bundle\CoreInstallerBundle\Controller\MigrationController::migrate</default>
        <option key="expose">true</option>
        <option key="i18n">false</option>
    </route>

    <route id="upgrade" path="/upgrade/{stage}">
        <default key="_controller">Zikula\Bundle\CoreInstallerBundle\Controller\UpgraderController::upgrade</default>
        <default key="stage">null</default>
    </route>

    <route id="doc" path="/installdoc/{name}">
        <default key="_controller">Zikula\Bundle\CoreInstallerBundle\Controller\DocController::display</default>
        <default key="name">INSTALL-2.0.md</default>
        <condition>request.query.get('name') matches "/[^\/]+.md/"</condition>
    </route>
</routes>
